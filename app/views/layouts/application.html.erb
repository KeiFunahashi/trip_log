<!DOCTYPE html>
<html>
  <head>
    <title>TripLogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/a52789246b.js" crossorigin="anonymous"></script>
    <%# <meta name=viewport content="width=device-width, initial-scale=1">  </head> %>
  <body>
  <div class='wrapper'>
    <header class="header">
      <div class="header__bar">
        <div class="app-name">
        <%=link_to "Trip Log",root_path,class:"app-name-link" %>
        </div>
        <% if user_signed_in? %>
          <div class="user-name">
            <%= link_to "#{current_user.nickname}", "/users/#{current_user.id}" %>
          </div>
        <% else %>
          <div class="user-name">
            <%= link_to "Log in", new_user_session_path, class: 'post' %>
            <%= link_to "| Sign up", new_user_registration_path, class: 'post' %>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
    <footer></footer>
    <div class="image-message">
      <h1>Have wonderful memories</h1>
    </div>
    </div>
  </body>
</html>
